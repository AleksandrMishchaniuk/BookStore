.caption
  %h2= @book.title
  %h3
    %i= "Author: #{authors_list @book.authors}"
.row
  .col-md-4
    .div_image
      = image_tag(@book.image, class: 'img-thumbnail')
  .col-md-8
    .div_to_cart
      .row
        .col-sm-6
          .price= "$ #{@book.price}"
        .col-sm-6.text-right
          = form_for @cart, url: add_item_cart_path, html: {class: 'form-inline', role: 'form'} do |f|
            = f.hidden_field :book_id, value: @cart.book_id
            .form-group
              = f.number_field(:book_count, value: @cart.book_count, in: 1..20, step: 1, class: 'form-control')
            .form-group
              = f.submit('Add to Cart', class: 'btn btn-primary')
          - if @in_cart
            %p.text-success
              %strong= "already in cart: #{@in_cart.book_count} pcs"
    %p.description
      = @book.full_description
.reviews
  %h3 Reviews
  - if user_signed_in?
    = link_to 'Add review for this book', new_shop_book_review_path(@book)
  - else
    %i
      for adding review, you should
      %strong= link_to "Sign In", new_user_session_path
  - if @reviews.empty?
    %p.text-center.lead No Reviews yet
  - else
    - @review.each do |review|
      = render 'partials/review', review: review
