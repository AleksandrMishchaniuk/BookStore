%h3.text-center= "#{type.to_s.upcase} ADDRESS"
= order.fields_for type do |type_f|
  = type_f.fields_for @order.send(:"#{type.to_s}_address") do |address_f|
    .form-group
      = address_f.label :first_name, 'First name'
      = address_f.text_field :first_name, class: 'form-control'
    .form-group
      = address_f.label :last_name, 'Last name'
      = address_f.text_field :last_name, class: 'form-control'
    .form-group
      = address_f.label :address_line, 'Street address'
      = address_f.text_field :address_line, class: 'form-control'
    .form-group
      = address_f.label :city, 'City'
      = address_f.text_field :city, class: 'form-control'
    .form-group
      = address_f.label :country, 'Country'
      = address_f.text_field :country, class: 'form-control'
    .form-group
      = address_f.label :zip, 'ZIP'
      = address_f.text_field :zip, class: 'form-control'
    .form-group
      = address_f.label :phone, 'Phone'
      = address_f.text_field :phone, class: 'form-control'
