- content_for :checkout_data do
  = form_for @order, url: checkout_addresses_path, method: 'put', html: {role: 'form'} do |order|
    .row
      .col-md-6
        = render 'partials/address_fields', type: :billing, object: order, address: @order.billing_address
      .col-md-6
        = render 'partials/address_fields', type: :shipping, object: order, address: @order.shipping_address
    .row
      .col-md-6
        .form-group
          = order.submit 'Save and Continue', class: 'btn btn-primary form-control'
      .col-md-6
        .form-group
          = check_box_tag(:once_address)
          = label_tag(:once_address, 'Use billing address as shipping')

= render 'checkout/wraper', step: @step
