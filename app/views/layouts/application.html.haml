!!! 5
%html
  %head
    %title BookStore
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %nav.navbar.navbar-default{role: 'navigation'}
      .container-fluid.container
        .navbar-header
          %button.navbar-toggle{type: 'button', 'data-toggle': 'collapse',
                                'data-target': '#navbar_collapse_1'}
            %span.sr-only 'Toggle navigation'
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "#{root_path}"} MAP-BookStore
        /end navbar-header
        .collapse.navbar-collapse#navbar_collapse_1
          = render_navigation level: 1, &main_menu_proc('nav navbar-nav')
          %ul.nav.navbar-nav.navbar-right
            %li.li_cart
              %a{href: "#{cart_path}"}
                %i.fa.fa-shopping-cart.fa-3x
                - unless @order.cart_items.empty?
                  %span.badge= @order.cart_items.size
            - if user_signed_in?
              %li.dropdown
                %a.dropdown-toggle{href: '#', 'data-toggle': 'dropdown'}
                  = current_user.email
                  %b.caret
                = render_navigation &user_menu_proc('dropdown-menu')
              = link_to 'Sign Out', destroy_user_session_path, class: 'btn btn-default navbar-btn', method: :delete
            - else
              = link_to 'Sign In', new_user_session_path, class: 'btn btn-default navbar-btn'
              = link_to 'Sign Up', new_user_registration_path, class: 'btn btn-default navbar-btn'
    /end navbar
    .container
      = yield
