!!! 5
%html
  %head
    %title BookStore
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %nav.navbar.navbar-default{role: 'navigation'}
      .container-fluid.container
        .navbar-header
          %button.navbar-toggle{type: 'button', 'data-toggle': 'collapse',
                                'data-target': '#navbar_collapse_1'}
            %span.sr-only 'Toggle navigation'
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "#{root_path}"} MAP-BookStore
        /end navbar-header
        .collapse.navbar-collapse#navbar_collapse_1
          %ul.nav.navbar-nav
            %li= link_to 'Home', root_path
            %li= link_to 'Shop', shop_books_path
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li.dropdown
                %a.dropdown-toggle{href: '#', 'data-toggle': 'dropdown'}
                  = current_user.email
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to 'Settings', edit_user_settings_path
                  %li= link_to 'Orders', user_orders_path
                  -if can? :access, :rails_admin
                    %li.divider
                    %li= link_to 'Admin panel', rails_admin_path
              = link_to 'Sign Out', destroy_user_session_path, class: 'btn btn-default navbar-btn', method: :delete
            - else
              = link_to 'Sign In', new_user_session_path, class: 'btn btn-default navbar-btn'
              = link_to 'Sign Up', new_user_registration_path, class: 'btn btn-default navbar-btn'
    /end navbar
    .container
      = yield
