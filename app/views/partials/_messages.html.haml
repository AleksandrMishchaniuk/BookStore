.container
  -if notice
    .alert.alert-success
      = notice
      %button.close{type: 'button', 'data-dismiss': 'alert', 'aria-hidden': 'true'}
        &times;

  -if alert
    .alert.alert-danger
      = alert
      %button.close{type: 'button', 'data-dismiss': 'alert', 'aria-hidden': 'true'}
        &times;
